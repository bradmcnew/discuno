if [ "$SKIP_PRE_COMMIT" = "true" ]; then
  echo "🔍 Skipping pre-commit checks..."
  exit 0
fi

echo "🔍 Running pre-commit checks..."

# Run lint-staged for staged files across the monorepo
echo "📝 Linting and formatting staged files..."
pnpm lint:staged

# Run type checking across the entire monorepo
echo "🔍 Running type checks..."
pnpm typecheck

echo "✅ Pre-commit checks passed!"
